
<section id= "banner-paper"> 

<style type="text/css">  img{
  -webkit-filter: sepia(70%);
  margin-right: auto;
  margin-left: auto;
  border-radius: 8px;
}</style>


<% @locations.each do |l| %>

	<div class= "col-md-6">
	<div class="well text-center">
	<h1><%= l.name %></h1>
		<%= l.address %><br>
	Latitude: <%= l.lat %><br>
	Longitude: <%= l.lng %><br>
	<img src="/assets/<%= l.image %>" class="location-image" /img>
	Location added: <%= l.created_at %>
	</div>
	</div>

<% end %>
</section>

