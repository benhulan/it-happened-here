
<section id= "banner-paper"> 

<style type="text/css">
    h3, a{font-family: 'Playfair Display', serif; color: black}
}
h2{font-family: 'Playfair Display SC', serif; font-weight: bold}
hr{    border: 0;
    border-bottom: 5px double #8E1F1D;;}
.rotate2 {
    transform: rotate(90deg);
    transition: .5s;
}
</style>

<h3>What happened in ... </h3>
<h2><%= @location.name %>?</h2>
<hr>
	<% @events.each do |event| %>
        <div class="span4 collapse-group"><a class="expand" href="#">
          <h4><%= event.year %> - <u><%= event.title %></u>
          <img class="hand" src="https://openclipart.org/image/2400px/svg_to_png/183195/pointing-hand.png" width="30"></a></h4>
           <p class="collapse"> <%= event.content %> </p>
        </div>
	<% end %>

</p>


<hr><a href="#back">Back to Map</a>

<script type="text/javascript">
$('.expand').on('click', function(e) {
    e.preventDefault();
	$(this).find('.hand').toggleClass('rotate2');

    var $collapse = $(this).closest('.collapse-group').find('.collapse');
    $collapse.collapse('toggle');
});
</script>

</section>